#!/bin/sh

NSENTER=$(dirname "$0")/nsenter

if [ -z "$1" ]; then
    echo "usage: docker-enter <container id/name> <command to run default:bash>"
else
    PID=$(docker inspect --format {{.State.Pid}} "$1")
    if [ -z "$PID" ]; then
        exit 1
    fi
    shift

    if [ "$#" -eq 0 ]; then
        if "$NSENTER" --target $PID --mount --uts --ipc --net --pid -- which bash > /dev/null; then
            COMMAND="bash --login"
        else
            COMMAND="sh"
        fi
    else
       COMMAND="$@"
    fi

    "$NSENTER" --target $PID --mount --uts --ipc --net --pid -- env --ignore-environment $COMMAND
fi
